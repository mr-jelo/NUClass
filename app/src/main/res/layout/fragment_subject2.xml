<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <!-- Header with subject info (non-scrollable) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:background="@color/blue">

        <TextView
            android:id="@+id/subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject 2"
            android:textSize="24sp"
            android:textColor="@color/yellow"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:layout_gravity="bottom"
        android:background="@color/blue"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:padding="10dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <!-- Top Part: Profile Icon + Text Views -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/profileIconTop"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile"
                            android:contentDescription="Profile Icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:id="@+id/usernameTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Professor"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/blue"/>

                            <TextView
                                android:id="@+id/emailTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/11   8:22 PM"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Head Text and Sub Text -->
                    <TextView
                        android:id="@+id/headTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/subTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/LoremIpsum"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_marginBottom="16dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/blue" />

                    <!-- Bottom Part: Comment Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/profileIconComment"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile"
                            android:contentDescription="Profile Icon" />

                        <EditText
                            android:id="@+id/commentInput1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="italic"
                            android:hint="Add Comment"
                            android:textSize="14sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/rounded_edit_text_background" />

                        <ImageView
                            android:id="@+id/sendButton1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_send"
                            android:contentDescription="Send Button"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <!-- Comments Section -->
                    <LinearLayout
                        android:id="@+id/commentsContainer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Second Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:padding="10dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <!-- Top Part: Profile Icon + Text Views -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/profileIconTop2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile"
                            android:contentDescription="Profile Icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:id="@+id/usernameTextView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Professor"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/blue"/>

                            <TextView
                                android:id="@+id/emailTextView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/11   8:22 PM"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="4dp"
                        android:layout_marginBottom="16dp"
                        android:padding="10dp"
                        android:backgroundTint="@color/blue"
                        app:cardCornerRadius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:orientation="vertical">

                            <!-- Top Part: Profile Icon + Text Views -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingStart="10dp"/>

                            </LinearLayout>

                            <!-- Head Text and Sub Text -->
                            <TextView
                                android:id="@+id/headTextView2.1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="Task 1"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/yellow"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/subTextView2.1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="Due on Sep 6"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:layout_marginBottom="16dp" />
                            <Button
                                android:id="@+id/view_task"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Go Home"
                                android:backgroundTint="@color/yellow"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/blue" />

                    <!-- Bottom Part: Comment Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/profileIconComment2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile"
                            android:contentDescription="Profile Icon" />

                        <EditText
                            android:id="@+id/commentInput2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="italic"
                            android:hint="Add Comment"
                            android:textSize="14sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/rounded_edit_text_background" />

                        <ImageView
                            android:id="@+id/sendButton2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_send"
                            android:contentDescription="Send Button"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <!-- Comments Section -->
                    <LinearLayout
                        android:id="@+id/commentsContainer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Third Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:padding="10dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <!-- Top Part: Profile Icon + Text Views -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/profileIconTop3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile"
                            android:contentDescription="Profile Icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:id="@+id/usernameTextView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Professor"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/blue"/>

                            <TextView
                                android:id="@+id/emailTextView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8/11   8:22 PM"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Head Text and Sub Text -->
                    <TextView
                        android:id="@+id/headTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/subTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/LoremIpsum"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_marginBottom="16dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/blue" />

                    <!-- Bottom Part: Comment Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/profileIconComment3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile"
                            android:contentDescription="Profile Icon" />

                        <EditText
                            android:id="@+id/commentInput3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="italic"
                            android:hint="Add Comment"
                            android:textSize="14sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/rounded_edit_text_background" />

                        <ImageView
                            android:id="@+id/sendButton3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_send"
                            android:contentDescription="Send Button"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <!-- Comments Section -->
                    <LinearLayout
                        android:id="@+id/commentsContainer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
