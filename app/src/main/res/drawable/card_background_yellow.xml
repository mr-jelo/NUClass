<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/> <!-- Default background color -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent inner background -->
            <stroke android:width="2dp" android:color="@color/yellow"/> <!-- Stroke color -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
